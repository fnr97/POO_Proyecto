/* ¿Dónde le damos valores a los recursos? ¿Son necesarios los setters?*/

public class Recurso() {

  private int alimentos;
  private int madera;
  private int piedras;
  
  public int getAlimentos() {
  
    return alimentos;
  
  }
  
  public int getMadera() {
  
    return madera;
  
  }
  
  public int getPiedras() {
  
    return piedras;
  
  }
  
  public void setAlimentos(int valor) {
  
    alimentos = valor;
  
  }
  
  public void setMadera(int valor) {
  
    madera = valor;
  
  }
  
  public void setPiedras(int valor) {
  
    piedras = valor;
  
  }
  
  /* SETTERS */
  
  /* METHODS */
  
  public int almacenarAlimentosEnCiudadela(int valorAlimentos) {
  
    this.alimentos += valorAlimentos;
    setAlimentos(this.alimentos);
  
  }

  public int almacenarMaderaEnCiudadela(int valorMadera) {

    this.madera += valorMadera;
    setMadera(this.madera);

    }
    
  public int almacenarPiedrasEnCiudadela(int valorPiedras) {

    this.piedras += valorPiedras;
    setPiedras(this.piedras);

  }
  
}
